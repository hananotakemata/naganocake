<div class="mt-3">
<h2><span class="bg-secondary text-white">注文履歴一覧</span></h2>
<div class="container text-center">

<table class= "table">
  <thead>
    <tr>
      <th style="background-color: grey;">購入日時</th>
      <th style="background-color: grey;">購入者</th>
      <th style="background-color: grey;">注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <% if order.customer.present? %>
    <tr>
      
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.customer.last_name + order.customer.first_name %></td>
      <td><%= order.order_details.count %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
<div class = "row d-flex justify-content-center">
<%= paginate @orders %>
</div>



