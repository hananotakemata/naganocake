<div class="mt-3">
<h2><span class="bg-secondary text-white"><%= @customer.last_name + @customer.first_name %> さんの会員詳細</span></h2>
<div class="container text-center">

<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name + @customer.first_name%></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td><%= @customer.customer_status %></td>
  </tr>
  <tr>
    <td colspan="2">
      <%= link_to '編集する',admin_edit_customer_path(@customer.id), class: 'btn btn-success' %>
      <%= link_to "注文履歴一覧", admin_top_path, method: :get, class: 'btn btn-primary' %>
    </td>
  </tr>
</table>
</div>
