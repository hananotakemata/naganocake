<div class="mt-3">
<h2><span class="bg-secondary text-white">商品登録</span></h2>

<div class = "row d-flex justify-content-center">

<%= form_with model: @item, url: admin_create_item_path, method: :post do |f| %>
  <h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>円<br>
  
  <%= f.submit '新規登録', class: "btn btn-success" %>
</div>
<% end %>