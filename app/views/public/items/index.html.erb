<div class="mt-3">
<h2><span class="bg-secondary text-white">商品一覧</span></h2>

<div class="container text-center">
<div class="row">
<% @items.each do |item| %>
  <div class="col">
    <p>
    <% if item.image.attached? %>
      <%= image_tag item.image, size: "160x180" %>
    <% else %>
      <%= image_tag 'no_image_cake', size: "150x170" %>
    <% end %>
    </p>

    <p><%= link_to item.name, public_show_item_path(item) %></p>
    <p>¥<%= item.price %>円（税抜）</p>
  </div>

<% end %>
</div>
<div class = "row d-flex justify-content-center">
<%= paginate @items %>
</div>
</div>
