<div class="mt-3">
<div class="container text-center">
<div class="row row-cols-2">
  <div class="col">
    <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image_cake', size: "200x200" %>
    <% end %>
  </div>

  <div class="col">
   <p><strong><%= @item.name %></strong></p>
    <p><%= @item.introduction %></p>
    <p>¥<%= number_with_delimiter(sprintf("%.0f", @item.with_tax_price), delimiter: ',') %>（税込）</p>


    <%= form_with model:@cart_item_new, local:true, url:public_create_cart_item_path do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.select :amount, options_for_select([["個数選択", nil]] + (1..10).map { |num| [num, num] }) %>
    <%= f.submit "カートに入れる", class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
</div>





