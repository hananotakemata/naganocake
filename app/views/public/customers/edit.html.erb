<div class="mt-3">
<h2><span class="bg-secondary text-white">会員情報編集</span></h2>

<div class="container text-center">
  <%= form_with(model: @customer, url:  public_update_customer_path(@customer), method: :patch) do |f| %>
  <fieldset>
    <legend>名前</legend>
    <div class="field">
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
  </fieldset>

  <fieldset>
    <legend>フリガナ</legend>
    <div class="field">
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
  </fieldset>

  <div class="field">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "street-address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
  <%= link_to "退会する", public_check_customer_path, class: "btn btn-danger" %>

<% end %>
</div>
</div>

