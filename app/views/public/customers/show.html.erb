<div class="mt-3">

<h2><span class="bg-secondary text-white">　マイページ　</span></h2>

<div><strong>登録情報</strong>
<% if @customer == current_customer %>
  <%= link_to '編集する', public_edit_customer_path(@customer.id), class: 'btn btn-success' %>
<% end %>
</div>

<table class="table">
  <tbody>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>名前</strong></td>
      <td>
         <%= @customer.last_name %> <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>カナ</strong></td>
      <td>
        <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>郵便番号</strong></td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>住所</strong></td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>電話番号</strong></td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td style="border-right: 1px solid black; background-color: lightgrey;"><strong>メールアドレス</strong></td>
      <td><%= @customer.email %></td>
    </tr>

  </tbody>
</table>
<div><strong>注文履歴</strong> <%= link_to "一覧を見る", public_order_history_path(@customer), class: "btn btn-info" %></div>
