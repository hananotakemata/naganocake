<div class="mt-3 text-center">
<h2><span class="bg-secondary text-white">注文情報入力</span></h2>


<%= form_with model: @order, url: public_new_order_confirmation_path, method: :post do |f| %>

  <p>
    <strong>支払い方法</strong>
    <br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
    <br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
  </p>
  <p><strong>お届け先</strong><br>
  <%= f.radio_button :select_address, 0, checked: true %>
     <%= f.label :address_number_0, "自身の住所" %><br>
     〒<%= current_customer.full_address%><br>
     <%= current_customer.full_name%>
  </p>

  <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
<% end %>
</div>

