<h2><span class="bg-secondary text-white">新規会員登録</span></h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="row">
  <div class="col-3">名前</div>
  <div class="col-1"><%= f.label "姓" %></div>
  <div class="col-3"><%= f.text_field :last_name %></div>

  <div class="col-1"><%= f.label "名" %></div>
  <div class="col-3"><%= f.text_field :first_name %></div>
  </div>
</div>

<div class="row">
  <div class="col-3">フリガナ</div>
  <div class="col-1"><%= f.label "（セイ）" %></div>
  <div class="col-3"><%= f.text_field :last_name_kana %></div>

  <div class="col-1"><%= f.label "（メイ）" %></div>
  <div class="col-3"><%= f.text_field :first_name_kana %></div>
  </div>
</div>


  <div class="row">
    <div class="col-6"><%= f.label "メールアドレス" %></div>
    <div class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class="row">
    <div class="col-6"><%= f.label "郵便番号(ハイフンなし)" %></div>
    <div class="col-6"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %></div>
  </div>

  <div class="row">
    <div class="col-3"><%= f.label "住所" %></div>
    <div class="col-1"></div>
    <div class="col-6"><%= f.text_field :address, autofocus: true, autocomplete: "street-address",class: 'form-control' %></div>
    <!--<div class="col-3"></div>-->
  </div>

  <div class="row">
    <div class="col-6"><%= f.label "電話番号(ハイフンなし)" %></div>
    <div class="col-6"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel" %></div>
  </div>



  <div class="row">
    <div class="col-6"><%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    </div>
    <div class="col-6"><%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>

  <div class="row">
    <div class="col-6"><%= f.label "パスワード（確認用）" %></div>
    <div class="col-6"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>

  <div class = "row d-flex justify-content-center">
    <div class="row">
    <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>

<% end %>

<%= render "public/shared/links" %>
